<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <display-name>Fabflix</display-name>

    <!-- 添加数据库连接池的资源引用 -->
    <resource-ref>
        <description>MySQL DataSource for Fabflix</description>
        <res-ref-name>jdbc/moviedb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Context Parameters -->
    <context-param>
        <param-name>debugMode</param-name>
        <param-value>true</param-value>
    </context-param>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!--
    Character Encoding Filter - 暂时禁用
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    -->

    <!-- Dashboard Authentication Filter -->
    <filter>
        <filter-name>DashboardAuthFilter</filter-name>
        <filter-class>main.java.com.fabflix.filter.DashboardAuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>DashboardAuthFilter</filter-name>
        <url-pattern>/_dashboard/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>main.java.com.fabflix.filter.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <!--
        Servlet Definitions
        注意：Servlet类使用了包名，需要修改对应的Java文件
        Note: Servlet classes use package names, corresponding Java files need to be modified
    -->
    <servlet>
        <servlet-name>MovieListServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.MovieListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SingleMovieServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.SingleMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SingleStarServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.SingleStarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCartServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.ShoppingCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.PaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecaptchaKeyServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.RecaptchaKeyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.EmployeeLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.DashboardServlet</servlet-class>
    </servlet>
    <!-- 添加新的Servlet注册 -->
    <servlet>
        <servlet-name>MovieSearchServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.MovieSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovieFullTextSearchServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.MovieFullTextSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MoviesByIdsServlet</servlet-name>
        <servlet-class>main.java.com.fabflix.servlet.MoviesByIdsServlet</servlet-class>
    </servlet>

    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>MovieListServlet</servlet-name>
        <url-pattern>/movie-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingleMovieServlet</servlet-name>
        <url-pattern>/single-movie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingleStarServlet</servlet-name>
        <url-pattern>/single-star</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCartServlet</servlet-name>
        <url-pattern>/shopping-cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecaptchaKeyServlet</servlet-name>
        <url-pattern>/api/config/recaptcha-key</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <url-pattern>/_dashboard/api/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/_dashboard/api/*</url-pattern>
    </servlet-mapping>
    <!-- 添加新的Servlet映射 -->
    <servlet-mapping>
        <servlet-name>MovieSearchServlet</servlet-name>
        <url-pattern>/api/movie-search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovieFullTextSearchServlet</servlet-name>
        <url-pattern>/api/movie-full-search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MoviesByIdsServlet</servlet-name>
        <url-pattern>/api/movies-by-ids</url-pattern>
    </servlet-mapping>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error.html</location>
    </error-page>
</web-app>
